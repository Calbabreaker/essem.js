{
    "name": "essem",
    "version": "0.0.0",
    "description": "Javascript ecs game engine.",
    "main": "build/essem.js",
    "module": "build/essem.module.js",
    "types": "build/essem.d.ts",
    "scripts": {
        "start": "npm run dev",
        "dev": "rollup -cw --environment DEV,SERVER",
        "build": "rollup -c",
        "build:dev": "rollup -c --environment DEV",
        "lint": "eslint --ext .js,.ts . --max-warnings 0",
        "lint:fix": "npm run lint -- --fix",
        "docs": "webdoc --site-root docs"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Calbabreaker/essem.js.git"
    },
    "keywords": [
        "library",
        "javascript",
        "typescript",
        "application",
        "games",
        "engine",
        "ecs",
        "framework",
        "renderer"
    ],
    "author": "Calbabreaker",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/Calbabreaker/essem.js/issues"
    },
    "homepage": "https://github.com/Calbabreaker/essem.js#readme",
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^4.21.0",
        "@typescript-eslint/parser": "^4.21.0",
        "@webdoc/cli": "^1.2.0",
        "eslint": "^7.23.0",
        "eslint-config-prettier": "^8.1.0",
        "eslint-plugin-prettier": "^3.3.1",
        "prettier": "^2.2.1",
        "rollup": "^2.44.0",
        "rollup-plugin-dts": "^3.0.1",
        "rollup-plugin-glsl": "^1.3.0",
        "rollup-plugin-jscc": "^2.0.0",
        "rollup-plugin-serve": "^1.1.0",
        "rollup-plugin-sourcemaps": "^0.6.3",
        "rollup-plugin-terser": "^7.0.2",
        "rollup-plugin-typescript2": "^0.30.0",
        "typescript": "^4.2.4"
    }
}
